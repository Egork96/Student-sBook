<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="?attr/colorPrimary"
    >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/choose_theme"
            android:textAlignment="center"
            android:textColor="@color/indigo_icons"
            android:textSize="24dp"
            android:layout_gravity="top|center_horizontal"/>

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:useDefaultMargins="false"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/theme_red"
                android:layout_width="@dimen/theme_button_size"
                android:layout_height="@dimen/theme_button_size"
                android:layout_column="0"
                android:layout_row="0"
                android:background="@color/red_primary"
                android:text="theme1"
                />

            <Button
                android:id="@+id/theme_orange"
                android:layout_width="@dimen/theme_button_size"
                android:layout_height="@dimen/theme_button_size"
                android:layout_column="1"
                android:layout_row="0"
                android:background="@color/orange_primary"
                android:text="theme2"/>

            <Button
                android:id="@+id/theme_amber"
                android:layout_width="@dimen/theme_button_size"
                android:layout_height="@dimen/theme_button_size"
                android:layout_column="2"
                android:layout_row="0"
                android:background="@color/amber_primary"
                android:text="theme3"/>

            <Button
                android:id="@+id/theme_purple"
                android:layout_width="@dimen/theme_button_size"
                android:layout_height="@dimen/theme_button_size"
                android:layout_column="0"
                android:layout_row="1"
                android:background="@color/purple_primary"
                android:text="theme4"/>

            <Button
                android:id="@+id/theme_indigo"
                android:layout_width="@dimen/theme_button_size"
                android:layout_height="@dimen/theme_button_size"
                android:layout_column="1"
                android:layout_row="1"
                android:background="@color/indigo_primary"
                android:text="theme5"/>

            <Button
                android:id="@+id/theme_pink"
                android:layout_width="@dimen/theme_button_size"
                android:layout_height="@dimen/theme_button_size"
                android:layout_column="0"
                android:layout_row="2"
                android:background="@color/pink_primary"
                android:text="theme5"/>

            <Button
                android:id="@+id/theme_grey"
                android:layout_width="@dimen/theme_button_size"
                android:layout_height="@dimen/theme_button_size"
                android:layout_column="0"
                android:layout_row="3"
                android:background="@color/grey_primary"
                android:text="theme5"/>

            <Button
                android:id="@+id/theme_green"
                android:layout_width="@dimen/theme_button_size"
                android:layout_height="@dimen/theme_button_size"
                android:layout_column="1"
                android:layout_row="2"
                android:background="@color/green_primary"
                android:text="theme5"/>

            <Button
                android:id="@+id/theme_blue"
                android:layout_width="@dimen/theme_button_size"
                android:layout_height="@dimen/theme_button_size"
                android:layout_column="2"
                android:layout_row="1"
                android:background="@color/blue_primary"
                android:text="theme6"/>

            <Button
                android:id="@+id/theme_lime"
                android:layout_width="@dimen/theme_button_size"
                android:layout_height="@dimen/theme_button_size"
                android:layout_column="2"
                android:layout_row="2"
                android:background="@color/lime_primary"
                android:text="theme5"/>

            <Button
                android:id="@+id/theme_blue_grey"
                android:layout_width="@dimen/theme_button_size"
                android:layout_height="@dimen/theme_button_size"
                android:layout_column="1"
                android:layout_row="3"
                android:background="@color/blue_grey_primary"
                android:text="theme5"/>

            <Button
                android:id="@+id/theme_cyan"
                android:layout_width="@dimen/theme_button_size"
                android:layout_height="@dimen/theme_button_size"
                android:layout_column="2"
                android:layout_row="3"
                android:background="@color/cyan_primary"
                android:text="theme5"/>
        </GridLayout>

    <Button
        android:id="@+id/btn_ready"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView4"
        android:text="@string/next_button"
        android:textColor="?attr/colorAccent"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"/>

    <include
        layout="@layout/theme_preview_fab"
        android:layout_gravity="bottom|right"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="-56dp"/>

    <include
        layout="@layout/theme_preview_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="-56dp"/>

</FrameLayout>